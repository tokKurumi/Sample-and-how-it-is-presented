<UserControl x:Class="Sample_and_how_it_is_presented.MVVM.View.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sample_and_how_it_is_presented.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel>
		<TextBlock Text="Главная"
                 Foreground="White"
                 FontSize="28"
                 HorizontalAlignment="Left"
                 Margin="0,0,0,20"/>

		<StackPanel Orientation="Horizontal"
						Margin="0,0,0,10">
			<Border Width="400"
                 Height="200">
				<Border.Background>
					<LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
						<GradientStop Color="#5bc3ff" Offset="0.0"/>
						<GradientStop Color="#3aa0ff" Offset="1"/>
					</LinearGradientBrush>
				</Border.Background>

				<Border.Clip>
					<RectangleGeometry RadiusX="10"
                                  RadiusY="10"
                                  Rect="0,0,400,200"/>
				</Border.Clip>

				<Grid>
					<StackPanel>
						<TextBlock Text="Теория вероятности&#x0a;Автоматизация вычислений"
                             Foreground="White"
                             FontSize="28"
                             Margin="20,10,10,0"/>
						<TextBlock Text="Удобное использование,&#x0a;красивый дизайн,&#x0a;высокая функциональность!"
                             Foreground="White"
                             FontSize="18"
                             Margin="20,10,10,0"/>
					</StackPanel>

					<Image Width="150"
                      Height="150"
                      Source="/MVVM/View/dice.png"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Bottom" Margin="269,0,0,-37"/>
				</Grid>

			</Border>

			<Border Width="200"
                 Height="200"
                 CornerRadius="10"
                 Margin="45,0,0,0">

				<Border.Clip>
					<RectangleGeometry RadiusX="10"
                                  RadiusY="10"
                                  Rect="0,0,200,200"/>
				</Border.Clip>

				<Grid>
					<Image Source="/MVVM/View/logo.png"/>

				</Grid>
				
			</Border>
		</StackPanel>

		<StackPanel>
			<TextBlock Text="Вычисления теперь ещё удобнее!"
						  Foreground="White"
						  FontSize="20"
						  HorizontalAlignment="Left"
						  Margin="0,0,0,10"/>
			<StackPanel Orientation="Horizontal">
				<StackPanel.Resources>
					<Style TargetType="{x:Type Border}">
						<Setter Property="Margin" Value="15,0,0,0"/>
					</Style>
				</StackPanel.Resources>

				<Border Width="150"
							Height="150"
							Background="#844eff"
							CornerRadius="10"
							Margin="0">

					<Grid>
						<TextBlock Text="Вариационные ряды"/>
					</Grid>
				</Border>

				<Border Width="150"
							Height="150"
							Background="#4e99ff"
							CornerRadius="10"/>

				<Border Width="150"
							Height="150"
							Background="#4eff91"
							CornerRadius="10"/>

				<Border Width="150"
							Height="150"
							Background="#ecff4e"
							CornerRadius="10"/>
			</StackPanel>
		</StackPanel>
	</StackPanel>
</UserControl>
